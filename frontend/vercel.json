{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "framework": "vite",
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "rewrites": [
    { "source": "/(.*)", "destination": "/frontend/index.html" }
  ],
  "env": {
    "VITE_EMAILJS_SERVICE_ID": "service_hw50w0e",
    "VITE_EMAILJS_TEMPLATE_ID": "template_g0j1rtk",
    "VITE_EMAILJS_PUBLIC_KEY": "leYl-vHCy7ivLcc1D",
    "VITE_ALCHEMY_API_KEY": "L4CDbEdlU5Ajaxx9E4LrN",
    "VITE_INFURA_PROJECT_ID": "project_placeholder"
  }
}
